# BANCO DE DADOS - NEON PostgreSQL
# Formato: postgresql://username:password@neon-endpoint.neon.tech/databasename?sslmode=require
# Obtenha em: https://console.neon.tech
DATABASE_URL=postgresql://usuario:senha@neon-endpoint.neon.tech/databasename?sslmode=require

# ADMINISTRADOR
ADMIN_EMAIL=seu_email@exemplo.com
ADMIN_PASSWORD=sua_senha_segura

# JWT E SESSAO (Gere usando: openssl rand -base64 32)
JWT_SECRET=chave_secreta_jwt
SESSION_SECRET=chave_secreta_sessao

# EMAIL - RESEND (Opcional)
# Obtenha em: https://resend.com
RESEND_API_KEY=re_seu_api_key_aqui

# IA - OPENAI (Opcional)
# Obtenha em: https://platform.openai.com
OPENAI_API_KEY=sk_seu_api_key_aqui

# IA - GOOGLE GEMINI (Opcional)
# Obtenha em: https://makersuite.google.com
GOOGLE_GEMINI_API_KEY=seu_gemini_api_key_aqui

# INTEGRACAO - GOOGLE CALENDAR (Opcional)
# Obtenha em: https://console.cloud.google.com
GOOGLE_CALENDAR_CLIENT_ID=seu_client_id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=seu_client_secret_aqui

# INTEGRACAO - INSTAGRAM (Opcional)
# Obtenha em: https://developers.facebook.com
INSTAGRAM_ACCESS_TOKEN=seu_token_aqui
INSTAGRAM_USER_ID=seu_user_id_aqui

# WEB PUSH - VAPID Keys (Opcional para notificacoes push)
# Gere usando biblioteca web-push ou online
VAPID_PUBLIC_KEY=chave_publica_vapid
VAPID_PRIVATE_KEY=chave_privada_vapid
VITE_VAPID_PUBLIC_KEY=chave_publica_vapid
